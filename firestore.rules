rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isStudent() {
      return isAuthenticated() && getUserRole() == 'student';
    }
    
    function isFaculty() {
      return isAuthenticated() && getUserRole() == 'faculty';
    }
    
    function isHOD() {
      return isAuthenticated() && getUserRole() == 'hod';
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             (request.auth.token.email == 'zestacademyonline@gmail.com' || 
              request.auth.token.email == 'ramunarlapati27@gmail.com');
    }
    
    function isStaffOrAbove() {
      return isFaculty() || isHOD() || isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      // Staff and above can read all profiles
      // Unauthenticated users can read profiles for name/dept lookup during login
      allow read: if isOwner(userId) || isStaffOrAbove() || (request.auth == null && resource.data.role in ['student', 'faculty', 'hod']);
      
      // Users can create their own profile during registration
      allow create: if isOwner(userId);
      
      // Users can update their own profile
      // Admin can update any profile
      allow update: if isOwner(userId) || isAdmin();
      
      // Only admin can delete users
      allow delete: if isAdmin();
    }
    
    // Departments collection
    match /departments/{departmentId} {
      // Everyone can read departments
      allow read: if isAuthenticated();
      
      // Only HOD and Admin can create/update/delete departments
      allow write: if isHOD() || isAdmin();
    }
    
    // Attendance records (archived)
    match /attendance/{date}/{document=**} {
      // Students can read their own attendance
      // Faculty can read attendance for their classes
      // HOD can read attendance for their department
      // Admin can read all attendance
      allow read: if isAuthenticated();
      
      // Only faculty, HOD, and admin can write attendance
      allow write: if isStaffOrAbove();
    }
    
    // Academic records
    match /academic_records/{recordId} {
      // Students can read their own records
      // Faculty can read records for their classes
      // HOD can read records for their department
      // Admin can read all records
      allow read: if isAuthenticated();
      
      // Only faculty, HOD, and admin can write academic records
      allow create, update: if isStaffOrAbove();
      
      // Only admin can delete academic records
      allow delete: if isAdmin();
    }

    // Marks records
    match /marks/{markId} {
      // Everyone authenticated can read
      allow read: if isAuthenticated();
      // Only staff/hod/admin can write
      allow write: if isStaffOrAbove();
    }

    // Consolidated Marks records (Legacy)
    match /marks_consolidated/{markId} {
      allow read: if isAuthenticated();
      allow write: if isStaffOrAbove();
    }

    // Class Consolidated Marks (New)
    match /marks_class_consolidated/{markId} {
      allow read: if isAuthenticated();
      allow write: if isStaffOrAbove();
    }
    
    // Fee records
    match /finance/{feeId} {
      // Students can read their own fee records
      // Staff can read all fee records
      allow read: if isAuthenticated();
      
      // Only admin can write fee records
      allow write: if isAdmin();
    }
    
    // Announcements
    match /announcements/{announcementId} {
      // Everyone can read announcements
      allow read: if isAuthenticated();
      
      // Institutional announcements: Only admin can create
      // Departmental announcements: HOD and admin can create
      allow create: if (isAdmin()) || 
                      (isHOD() && request.resource.data.tier == 'departmental');
      
      // Only creator or admin can update/delete
      allow update, delete: if isAdmin() || 
                              (isHOD() && resource.data.createdBy == request.auth.uid);
    }
    
    // Ratings
    match /ratings/{ratingId} {
      // Everyone can read ratings
      allow read: if isAuthenticated();
      
      // Users can create ratings
      allow create: if isAuthenticated();
      
      // Only creator can update their rating
      allow update: if isOwner(resource.data.ratedBy);
      
      // Only admin can delete ratings
      allow delete: if isAdmin();
    }
    
    // Class sections
    match /class_sections/{sectionId} {
      // Everyone can read class sections
      allow read: if isAuthenticated();
      
      // Only faculty, HOD, and admin can manage class sections
      allow write: if isStaffOrAbove();
    }

    // Admin Student Records
    // SECURITY FIX: Restricted access - only staff can view student data
    match /admin/students {
      // Staff and above can list/traverse the structure
      allow read: if isStaffOrAbove();

      // Branch/Year Document (e.g. admin/students/EEE/1)
      match /{branch}/{year} {
          // Only staff can read/write year metadata
          allow read: if isStaffOrAbove();
          allow write: if isAdmin() || isHOD();

          // Section/Student Document (e.g. admin/students/EEE/1/A/UID)
          match /{section}/{studentId} {
              // Students can read their own data, staff can read all
              allow read: if isAuthenticated() && (request.auth.uid == studentId || isStaffOrAbove());
              // Only admin can write, or students can update their own limited fields
              allow write: if isAdmin() || request.auth.uid == studentId;
          }
      }
    }
  }
}
